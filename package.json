{
    "author": "Adrian Popescu",
    "name": "@cry0nics/akt",
    "version": "1.0.0",
    "description": "Apollo-Koa-TypeScript API playground. ",
    "scripts": {
        "format-check": "prettier --check \"*.{js,json}\"",
        "format": "prettier --write \"*.{js,json}\"",
        "lint:scripts": "eslint \"*.js\"",
        "lint": "concurrently \"npm:lint:*\"",
        "spell-check": "cspell --no-progress"
    },
    "keywords": [],
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@glen-84/eslint-config": "^4.5.0",
        "@glen-84/prettier-config": "^2.3.0",
        "@types/node": "^17.0.27",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "concurrently": "^7.1.0",
        "cspell": "^5.19.7",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "lint-staged": "^12.4.1",
        "prettier": "2.6.2",
        "simple-git-hooks": "^2.7.0",
        "typescript": "^4.6.3"
    },
    "lint-staged": {
        "*.{html,js,json,md,scss,ts}": "cspell --no-must-find-files",
        "*.{html,js,json,scss,ts}": "prettier --check",
        "*.{js,ts}": "eslint"
    },
    "simple-git-hooks": {
        "commit-msg": "npx commitlint --edit \"$1\"",
        "pre-commit": "npx lint-staged"
    }
}

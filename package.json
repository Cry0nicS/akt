{
    "author": "Adrian Popescu",
    "name": "@cry0nics/akt",
    "description": "Apollo-Koa-TypeScript API playground. ",
    "scripts": {
        "build": "npx tsc",
        "clean": "rm -rf node_modules/ dist/",
        "db:setup": "ts-node ./tests/setup.ts",
        "format": "prettier --write \"**/*.{js,json,ts}\"",
        "format-check": "prettier --check \"**/*.{js,json,ts}\"",
        "lint": "eslint \"src/**/*.ts\" \"*.js\"",
        "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync --dataSource ./dist/src/app/data/data-source.js",
        "spell-check": "cspell --no-progress",
        "start": "ts-node-dev --respawn src/index.ts",
        "start:nodemon": "nodemon --exec \"npx tsc && node dist/src/index.js\" --watch src --ext ts",
        "start:prod": "npm run build && node dist/src/index.js",
        "test": "npm run db:setup && jest",
        "type-check": "tsc --noEmit",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js"
    },
    "keywords": [],
    "dependencies": {
        "apollo-server-core": "^3.6.7",
        "apollo-server-koa": "^3.6.7",
        "casual": "^1.6.2",
        "class-validator": "^0.13.2",
        "dotenv": "^16.0.0",
        "env-var": "^7.1.1",
        "graphql": "^15.7.2",
        "joiful": "^3.0.2",
        "koa": "^2.13.4",
        "mysql2": "^2.3.3",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1",
        "typedi": "^0.10.0",
        "typeorm": "^0.3.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@faker-js/faker": "^7.3.0",
        "@glen-84/eslint-config": "^4.5.0",
        "@glen-84/prettier-config": "^2.3.0",
        "@types/jest": "^28.1.3",
        "@types/koa": "^2.13.4",
        "@types/node": "^17.0.29",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "cspell": "^5.19.7",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^28.1.1",
        "lint-staged": "^12.4.1",
        "nodemon": "^2.0.16",
        "prettier": "2.6.2",
        "simple-git-hooks": "^2.7.0",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.6.3"
    },
    "lint-staged": {
        "*.{html,js,json,md,scss,ts}": "cspell --no-must-find-files",
        "*.{html,js,json,scss,ts}": "prettier --check",
        "*.{js,ts}": "eslint"
    },
    "simple-git-hooks": {
        "commit-msg": "npx commitlint --edit \"$1\"",
        "pre-commit": "npx lint-staged"
    },
    "prettier": "@glen-84/prettier-config"
}
